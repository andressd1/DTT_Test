<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NoResultFragment">


    <ImageView
        android:id="@+id/notFound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40sp"
        android:layout_marginTop="30sp"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:src="@drawable/search_state_empty"
        android:contentDescription="@string/No_Results_Image_Descr" />

    <TextView
        android:id="@+id/textNotFound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notFound"
        android:layout_marginHorizontal="30sp"
        android:layout_marginVertical="20sp"
        android:gravity="center_horizontal"
        android:text="@string/no_results_found_try_something_else"
        android:textColor="@color/Medium" />

</RelativeLayout>
